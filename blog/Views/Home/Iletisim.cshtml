@using blog.Models
@model List<Iletisim>

@{
    ViewData["Title"] = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div role="main" class="main">
    <div class="pt-3 pb-5">
        <div class="pt-3 pb-5">
            <div class="pt-3 pb-5">
                <div class="d-flex justify-content-center pt-3 pb-5">
                    <h3 class="m-0 text-primary">İletişim</h3>
                </div>
                <div class="container pt-3 pb-5" style="margin-right: 100px;">
                    <div class="row">
                        <div class="col-sm">
                            <h4 class="pt-5 text-primary">Genel <strong>Müdürlük</strong></h4>
                            <ul class="list list-icons list-icons-style-3 mt-2">
                                <li class="pt-3 pb-2">
                                    <i class="fas fa-map-marker-alt top-6"></i><strong>Adres: </strong>@ViewBag.Adres
                                </li>
                                <li class="pt-3 pb-2"><i class="fas fa-phone top-6"></i> <strong>Telefon: </strong>@ViewBag.Phone</li>
                                <li class="pt-3 pb-2"><i class="fas fa-envelope top-6"></i> <strong>Email: </strong><a href="mailto:@ViewBag.Eposta">@ViewBag.Eposta</a></li>
                            </ul>
                        </div>
                        <div class="col-sm">
                            <h4 class="pt-5 text-primary">Firma <strong>İletişim</strong></h4>
                            <ul class="list list-icons list-icons-style-3 mt-2">
                                <li class="pt-3 pb-2"><i class="fas fa-phone top-6"></i> <strong>Telefon: </strong>@ViewBag.Phone</li>
                                <li class="pt-3 pb-2"><i class="fas fa-envelope top-6"></i> <strong>Email: </strong><a href="mailto:@ViewBag.Eposta">@ViewBag.Eposta</a></li>
                            </ul>
                        </div>
                        <div class="col-sm">
                            <h4 class="pt-5 text-primary">Çalışma <strong>Saatleri</strong></h4>
                            <ul class="list list-icons list-dark mt-2">
                                <li class="pt-3 pb-2"><i class="far fa-clock top-6"></i> @ViewBag.Saatler</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>