@using blog.Models;
@model List<Blog>

@foreach (var a in Model)
{
    <div class="position-relative overflow-hidden" style="height: 435px;">
        <img class="img-fluid h-100" src="~/Resimler/Blog/@a.ResimYol" style="object-fit: cover;">
        <div class="overlay">
            <div class="mb-1">
                <a class="text-white" href="~/Home/BlogDetay/@a.Id">@a.Baslik</a>
                <span class="px-2 text-white">/</span>
                <a class="text-white" href="~/Home/BlogDetay/@a.Id">@a.Tarih</a>
            </div>
            <a class="h2 m-0 text-white font-weight-bold" href="~/Home/BlogDetay/@a.Id">@a.Konu</a>
        </div>
    </div>
}
